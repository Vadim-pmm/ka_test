<div class="col-md-6">
  <h3>Основные данные</h3>
  <div class='form-inline'>
    <p class="well well-sm"><%= @candidate.name %></p>
    <p class="well well-sm"><%= @candidate.father_name %></p>
    <p class="well well-sm"><%= @candidate.surname %></p>
  </div>

  <h3>Данные профиля</h3>
  <div class='form-inline'>
      <%= label_tag :address, 'Адрес', class: 'label label-default' %>
      <%= text_field_tag :address, @profile.address, class: 'form-control', size: 37, readonly: true %>
  </div>
  <br />

  <%= label_tag :phone, 'Телефон :' %>
  <div class="input-group">
    <span class="input-group-addon">+7 :</span>
    <%= text_field_tag :phone, number_to_phone(@profile.phone, area_code: true), class: 'form-control', readonly: true %>
  </div>
  <br />

  <div class='form-inline'>
        <%= label_tag :salary, 'Заработная плата', class: 'label label-default' %>
        <%= text_field_tag :salary, number_to_currency(@profile.salary, locale: :ru), class: 'form-control', readonly: true %>
      <br />
  </div>

</div>

<div class="col-md-6">
  <table class="table table-striped">
    <caption style="text-align:center">Навыки кандидата</caption>
    <tbody>
      <% @profile.skills.each do |item| %>
         <tr>
            <td><%= Skill.find(item).name %></td>
         </tr>
      <% end %>
    </tbody>
  </table>
</div>
